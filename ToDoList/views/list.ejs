<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to external CSS file -->
</head>
<body>
    <div class="box">
        <h1>To Do List</h1>
    </div>
    <div class="box">
        <% for(var i = 0; i < items.length; i++) { %> <!-- Loop through the 'ejes' array -->
            <div class="item">
                <input type="checkbox">
                <p><%= items[i] %></p> <!-- Display each item from the 'ejes' array -->
            </div>     
        <% } %>
        <form action="/" method="POST"> <!-- Form for adding new tasks -->
            <input type="text" name="ele1" placeholder="Enter the task">
            <button type="submit">+</button>
        </form>
    </div>
</body>
</html>
